@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="border rounded p-3 mb-1 border border-primary">
    <a asp-page="/Privacy" asp-route-Name="Todd" asp-route-Age="4">
        Happy birthday Todd!
    </a>
</div>
<div class="border rounded p-3 mb-1 border border-primary">
    <h3>GET</h3>
    <form method="get" asp-page="/Privacy">
        Name
        <input id="getName" name="Name"/>
        Age
        <input id="getAge" name="Age"/>
        <button type="submit">Submit</button>
    </form>
</div>
